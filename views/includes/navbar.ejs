    background-color: #fff; /* White background for the container */
    padding: 0.5rem; /* Optional: add some padding to create space */
    /* Match the border radius of the input and button */
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .search-inp {
    width: 100%; /* Full-width search input on small screens */
  }

  .search-btn {
    width: auto; /* Adjust width to fit content on small screens */
  }
}

